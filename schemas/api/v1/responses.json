{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Response Models",
  "description": "Response models for the Team.f√∂rsvarsmakten API",
  "type": "object",
  "definitions": {
    "ErrorResponse": {
      "title": "Error Response",
      "description": "Standard error response",
      "type": "object",
      "required": ["detail"],
      "properties": {
        "detail": {
          "oneOf": [
            {
              "type": "string",
              "description": "Error message"
            },
            {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["type", "loc", "msg"],
                "properties": {
                  "type": {
                    "type": "string",
                    "description": "Error type"
                  },
                  "loc": {
                    "type": "array",
                    "items": {
                      "oneOf": [
                        {"type": "string"},
                        {"type": "integer"}
                      ]
                    },
                    "description": "Error location"
                  },
                  "msg": {
                    "type": "string",
                    "description": "Error message"
                  },
                  "input": {
                    "description": "Input that caused the error"
                  }
                }
              },
              "description": "Validation errors"
            }
          ]
        }
      },
      "examples": [
        {
          "detail": "Team not found"
        },
        {
          "detail": [
            {
              "type": "missing",
              "loc": ["body", "username"],
              "msg": "Field required",
              "input": {}
            }
          ]
        }
      ]
    },
    "TeamResponse": {
      "title": "Team Response",
      "description": "Team information response",
      "type": "object",
      "required": ["id", "name", "users"],
      "properties": {
        "id": {
          "type": "integer",
          "description": "Team ID"
        },
        "name": {
          "type": "string",
          "description": "Team name"
        },
        "users": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/UserResponse"
          },
          "description": "Team members"
        }
      },
      "examples": [
        {
          "id": 1,
          "name": "Alpha Team",
          "users": [
            {
              "id": 1,
              "username": "alice",
              "team_id": 1,
              "color": "red"
            },
            {
              "id": 2,
              "username": "bob",
              "team_id": 1,
              "color": "blue"
            }
          ]
        }
      ]
    },
    "UserResponse": {
      "title": "User Response",
      "description": "User information response",
      "type": "object",
      "required": ["id", "username"],
      "properties": {
        "id": {
          "type": "integer",
          "description": "User ID"
        },
        "username": {
          "type": "string",
          "description": "Username"
        },
        "team_id": {
          "type": "integer",
          "description": "Team ID (if assigned)"
        },
        "color": {
          "type": "string",
          "description": "User color"
        }
      },
      "examples": [
        {
          "id": 1,
          "username": "alice",
          "team_id": 1,
          "color": "red"
        }
      ]
    },
    "AvailableTeamResponse": {
      "title": "Available Team Response",
      "description": "Available team for joining",
      "type": "object",
      "required": ["id", "name", "user_count", "max_users"],
      "properties": {
        "id": {
          "type": "integer",
          "description": "Team ID"
        },
        "name": {
          "type": "string",
          "description": "Team name"
        },
        "user_count": {
          "type": "integer",
          "description": "Current number of users"
        },
        "max_users": {
          "type": "integer",
          "description": "Maximum number of users"
        }
      },
      "examples": [
        {
          "id": 1,
          "name": "Alpha Team",
          "user_count": 2,
          "max_users": 4
        }
      ]
    },
    "GameSessionResponse": {
      "title": "Game Session Response",
      "description": "Game session information",
      "type": "object",
      "required": ["id", "team_id", "status", "created_at"],
      "properties": {
        "id": {
          "type": "integer",
          "description": "Game session ID"
        },
        "team_id": {
          "type": "integer",
          "description": "Team ID"
        },
        "status": {
          "type": "string",
          "enum": ["lobby", "countdown", "active", "finished"],
          "description": "Game session status"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "When the session was created"
        },
        "started_at": {
          "type": "string",
          "format": "date-time",
          "description": "When the game started"
        },
        "ended_at": {
          "type": "string",
          "format": "date-time",
          "description": "When the game ended"
        },
        "survival_time_seconds": {
          "type": "integer",
          "description": "How long the team survived in seconds"
        }
      }
    },
    "PuzzleAnswerResponse": {
      "title": "Puzzle Answer Response",
      "description": "Response to puzzle answer submission",
      "type": "object",
      "required": ["correct", "points_awarded"],
      "properties": {
        "correct": {
          "type": "boolean",
          "description": "Whether the answer was correct"
        },
        "awarded_to_user_id": {
          "type": "integer",
          "description": "ID of user who received points"
        },
        "points_awarded": {
          "type": "integer",
          "description": "Number of points awarded"
        },
        "next_puzzle_id": {
          "type": "integer",
          "description": "ID of next puzzle (if any)"
        },
        "next_puzzle": {
          "$ref": "#/definitions/PuzzleStateResponse",
          "description": "Next puzzle data (if any)"
        }
      }
    },
    "PuzzleStateResponse": {
      "title": "Puzzle State Response",
      "description": "Puzzle state for API responses",
      "type": "object",
      "required": ["id", "type", "data", "status", "correct_answer"],
      "properties": {
        "id": {
          "type": "integer",
          "description": "Puzzle ID"
        },
        "type": {
          "type": "string",
          "enum": ["memory", "spatial", "concentration", "multitasking"],
          "description": "Puzzle type"
        },
        "data": {
          "description": "Puzzle-specific data"
        },
        "status": {
          "type": "string",
          "enum": ["active", "completed", "failed"],
          "description": "Puzzle status"
        },
        "correct_answer": {
          "type": "string",
          "description": "Correct answer for the puzzle"
        }
      }
    },
    "PlayerPoints": {
      "title": "Player Points",
      "description": "Player points response model",
      "type": "object",
      "required": ["user_id", "username", "points"],
      "properties": {
        "user_id": {
          "type": "integer",
          "description": "User ID"
        },
        "username": {
          "type": "string",
          "description": "Username"
        },
        "points": {
          "type": "integer",
          "description": "Current points"
        }
      }
    },
    "TeamPoints": {
      "title": "Team Points",
      "description": "Team points response model",
      "type": "object",
      "required": ["team_id", "players"],
      "properties": {
        "team_id": {
          "type": "integer",
          "description": "Team ID"
        },
        "players": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PlayerPoints"
          },
          "description": "Player points"
        }
      }
    },
    "ColorAssignmentResponse": {
      "title": "Color Assignment Response",
      "description": "Response for color assignment operations",
      "type": "object",
      "required": ["success", "message"],
      "properties": {
        "success": {
          "type": "boolean",
          "description": "Whether the operation was successful"
        },
        "message": {
          "type": "string",
          "description": "Response message"
        },
        "reassignments": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Color reassignments made"
        },
        "conflicts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["user_id", "username", "current_color", "conflicting_users"],
            "properties": {
              "user_id": {
                "type": "integer",
                "description": "User ID with conflict"
              },
              "username": {
                "type": "string",
                "description": "Username"
              },
              "current_color": {
                "type": "string",
                "description": "Current color"
              },
              "conflicting_users": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["user_id", "username"],
                  "properties": {
                    "user_id": {
                      "type": "integer",
                      "description": "Conflicting user ID"
                    },
                    "username": {
                      "type": "string",
                      "description": "Conflicting username"
                    }
                  }
                },
                "description": "Users with conflicting colors"
              }
            }
          },
          "description": "Color conflicts found"
        }
      }
    }
  }
}
